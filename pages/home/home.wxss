page {
  background: #f1f1f1;
  height: 100%;
}

swiper {
  width: 100%;
  height: 400rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.list-content {
  font-size: 30rpx;
  background: #f1f1f1;
  padding: 5rpx 0;
  color: #000;
}

.tab-list {
  background: #fff;
  font-size: 34rpx;
  margin-top: 25rpx;
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  line-height: 80rpx;
}

.tab-list text {
  display: inline-block;
}

.list-item {
  padding: 20rpx 0rpx;
  background: #fff;
  margin: 20rpx 0;
  padding-bottom: 0;
}

.meta-list, .action-list {
  color: #909090;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.meta-list .user-img-wrap {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 1px solid #ddd;
  padding: 4rpx;
}

.meta-list .user-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.meta-list .user-wrap {
  line-height: 40rpx;
  padding-left: 20rpx;
}

.title-list {
  padding: 20rpx 30rpx;
  line-height: 50rpx;
  overflow: hidden;
  border-top: 2rpx solid #ddd;
  margin-top: 20rpx;
}

.include-img {
  padding: 20rpx;
}

.title-list image {
  min-width: 140rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.topic text {
  display: inline-block;
  border: 1px solid #007fff;
  color: #007fff;
  border-radius: 100rpx;
  padding: 0 50rpx;
  font-size: 24rpx;
}

.action-list {
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  justify-content: space-around;
}

.action-list view {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  padding: 15rpx;
}

.action-list image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.dynamic-content {
  background: #fff;
  margin-top: 20rpx;
  text-align: center;
  padding: 50rpx;
  font-size: 30rpx;
}

.dynamic-content image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
