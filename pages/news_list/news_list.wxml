<swiper class="swiper-container" indicator-dots autoplay circular>
  <block wx:for="{{posts}}">
    <swiper-item>
      <image src="{{item}}"></image>
    </swiper-item>
  </block>
</swiper>
<view class="news-lists">
  <view class="news-item" wx:for="{{posts}}">
    <view class="news-header">
      <image src="{{userInfo.avatarUrl}}"></image>
      <text>{{userInfo.nickName}}</text>
    </view>

    <view class="news-body">
      <image src="{{defaultNewsPic}}"></image>
      <text>{{defaultNewsDsc}}</text>
    </view>

    <view class="news-footer">
      <image src="/images/icon/chat.png"></image>
      <text>92</text>
      <image src="/images/icon/view.png"></image>
      <text>65</text>
    </view>
  </view>
</view>