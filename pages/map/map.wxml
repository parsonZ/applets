<view style="border: 1px solid #ddd; margin: 20px;">
  <map id="map" style="width: 100%; height: 400px;"
    longitude='{{map.center.lng}}'
    latitude='{{map.center.lat}}'
    show-compass="true"
    scale="14"
    controls="{{map.controls}}"
    enable-rotate="true"
    markers='{{map.markers}}'
    polyline="{{map.polyline}}"
  ></map>
  <button type='primary' bindtap="addMarker">add marker</button>
</view>