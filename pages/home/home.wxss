page {
  background: #f1f1f1;
}

swiper {
  width: 100%;
  height: 400rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.list-content {
  font-size: 30rpx;
  background: #f1f1f1;
  padding: 5rpx 0;
